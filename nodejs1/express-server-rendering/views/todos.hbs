<body>
    <form action="/todos/" method="post">
        <input type="text" placeholder="Enter Task" name="task">
        <button type="submit">ADD</button>
    </form>

    <ul>
        {{#each task as |t|}}
        <li>{{t.task}}</li>
        {{/each}}
    </ul>
</body>

</html>